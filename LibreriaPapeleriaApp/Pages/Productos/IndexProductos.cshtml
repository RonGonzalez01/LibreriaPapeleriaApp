@page
@model LibreriaPapeleriaApp.Pages.Productos.IndexProductosModel
@{
    ViewData["Title"] = "Productos";
}

<div class="container">
    <h1 class="mt-5">Productos</h1>

    <p>
        <a class="btn btn-success" asp-page="/Productos/Create">Añadir Nuevo Producto</a>
    </p>

    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model.Productos)
            {
                <tr>
                    <td>@producto.ProductoId</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Precio.ToString("C")</td>
                    <td>
                        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@producto.ProductoId">Editar</a>
                    </td>
                        <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@producto.ProductoId" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este producto?');">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
