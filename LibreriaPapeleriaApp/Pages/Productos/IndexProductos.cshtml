@page
@model LibreriaPapeleriaApp.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Productos";
}

<div class="container">
    <h1 class="mt-5">Productos</h1>
    <a class="btn btn-primary mb-3" asp-page="Create">Nuevo Producto</a>

    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model.Productos)
            {
                <tr>
                    <td>@producto.ProductoId</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Precio.ToString("C")</td>
                    <td>
                        <a class="btn btn-info" asp-page="Edit" asp-route-id="@producto.ProductoId">Editar</a>
                        <a class="btn btn-danger" asp-page="Delete" asp-route-id="@producto.ProductoId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
