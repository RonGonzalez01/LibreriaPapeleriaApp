@page "{id:int}"
@model LibreriaPapeleriaApp.Pages.Ordenes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Orden";
}

<h1>Eliminar Orden</h1>

<h3>¿Estás seguro de que deseas eliminar esta orden?</h3>
<div>
    <h4>Orden</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.Orden.Fecha.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Model.Orden.Total.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Usuario ID
        </dt>
        <dd class="col-sm-10">
            @Model.Orden.UsuarioId
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
