@page
@model LibreriaPapeleriaApp.Pages.Ordenes.IndexOrdenesModel
@{
    ViewData["Title"] = "Ordenes";
}

<div class="container">
    <h1 class="mt-5">Ordenes</h1>

    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col" style="color: black;">Orden ID</th>
                <th scope="col" style="color: black;">Fecha</th>
                <th scope="col" style="color: black;">Total</th>
                <th scope="col" style="color: black;">Usuario ID</th>
                <th scope="col" style="color: black;">Detalles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orden in Model.Ordenes)
            {
                <tr>
                    <td>@orden.OrdenId</td>
                    <td>@orden.Fecha.ToShortDateString()</td>
                    <td>@orden.Total.ToString("C")</td>
                    <td>@orden.UsuarioId</td>
                    <td>
                        <a class="btn btn-primary" href="/Ordenes/Details/@orden.OrdenId">Ver Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
