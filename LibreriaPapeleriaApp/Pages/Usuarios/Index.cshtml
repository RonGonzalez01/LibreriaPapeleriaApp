@page
@model LibreriaPapeleriaApp.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuarios[0].NombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuarios[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Usuarios)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.UsuarioId">Edit</a> |
                    <a asp-page="Details" asp-route-id="@item.UsuarioId">Details</a> |
                    <a asp-page="Delete" asp-route-id="@item.UsuarioId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
